<?xml version="1.0"?>
<root main_tree_to_execute="BehaviorTree">
    <!-- ////////// -->
    <BehaviorTree ID="BehaviorTree">
        <Sequence>
            <Action ID="GotoDoor"/>
            <Action ID="DetectBag"/>
            <ReactiveFallback>
                <Action ID="DetectObject"/>
                <Decorator ID="rate_controller" hz="10">
                    <Action ID="FollowPerson"/>
                </Decorator>
            </ReactiveFallback>
            <ReactiveFallback>
                <Action ID="DetectObject"/>
                <Action ID="GotoArena"/>
            </ReactiveFallback>
        </Sequence>
    </BehaviorTree>
    <!-- ////////// -->
    <TreeNodesModel>
        <Action ID="DetectBag"/>
        <Action ID="DetectObject"/>
        <Action ID="FollowPerson"/>
        <Action ID="GotoArena"/>
        <Action ID="GotoDoor"/>
        <Decorator ID="rate_controller">
            <input_port name="hz"/>
        </Decorator>
    </TreeNodesModel>
    <!-- ////////// -->
</root>

